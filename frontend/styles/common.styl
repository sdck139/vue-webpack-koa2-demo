.side
  position: relative
  &:before
  &:after
    content: " "
    width: 100%
    height: 1px
    border-bottom: 1px solid #ddd
    -webkit-transform: scaleY(.5)
    transform: scaleY(.5)
    z-index: 99
    left: 0
    right: 0
    position: absolute
  &:before
    top: 0px
  &:after
    bottom: 0px

